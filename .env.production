# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Configuración de Limpieza Automática
CLEANUP_INTERVAL=60
CLEANUP_TIMEOUT=24
CLEANUP_ENABLED=true

# Configuración de Backup Automático
