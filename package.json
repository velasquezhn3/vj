{
  "name": "ijcvwabot",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "admin": "node adminServer.js",
    "test": "jest --no-coverage",
    "test:watch": "jest --watch --no-coverage",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPatterns=tests/unit --no-coverage",
    "test:integration": "jest --testPathPatterns=tests/integration --no-coverage",
    "test:basic": "jest tests/unit/basic.test.js --no-coverage --verbose",
    "test:clear": "jest --clearCache",
    "test:silent": "cross-env SILENT_TESTS=true jest --no-coverage",
    "test:security": "npm audit && npm run test:coverage",
    "lint": "eslint . --ext .js --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .js --ignore-path .gitignore",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "backup:create": "node scripts/utilities/create-backup.js",
    "backup:restore": "node scripts/utilities/restore-backup.js",
    "db:migrate": "node scripts/migration/migrate-database.js",
    "db:seed": "node scripts/utilities/seed-database.js",
    "health": "node -e \"require('./middleware/healthCheck').middleware()(null, {status: s => ({json: j => console.log(JSON.stringify(j, null, 2))}), {})\"",
    "logs:clear": "node scripts/utilities/clear-logs.js",
    "validate": "npm run lint:check && npm run test:coverage && npm run security:audit",
    "build": "npm run validate && npm run backup:create",
    "deploy": "npm run build && npm start",
    "optimize:db": "node optimize-database.js",
    "diagnose": "node diagnose-tests.js",
    "fix:all": "node master-fix-all-errors.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@bot-whatsapp/bot": "^0.1.38",
    "@bot-whatsapp/provider-baileys": "^0.1.0-alpha.18",
    "@whiskeysockets/baileys": "^6.7.18",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "chrono-node": "^2.8.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "dropbox": "^10.34.0",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.32.6",
    "sqlite3": "^5.1.7",
    "stream-to-buffer": "^0.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "description": "",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.0.5",
    "jest-html-reporters": "^3.1.7",
    "ngrok": "^5.0.0-beta.2",
    "supertest": "^7.1.4"
  }
}